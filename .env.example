# A Moody Place - Environment Configuration
# Copy this file to .env and update with your actual production values

# Application
NODE_ENV=production
PORT=3000

# Database (Plesk MariaDB - update with your Plesk database credentials)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_plesk_database_user
DB_PASSWORD=your_plesk_database_password_change_this
DB_NAME=your_plesk_database_name

# Security (REQUIRED: Generate strong random strings - minimum 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters_change_this
SESSION_SECRET=your_very_secure_session_secret_key_here_minimum_32_characters_change_this

# Email Configuration (SMTP settings for contact form and newsletters)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email@a-moody-place.com
SMTP_PASS=your_email_password_change_this
FROM_EMAIL=noreply@a-moody-place.com
ADMIN_EMAIL=admin@a-moody-place.com

# Google Analytics (Replace with your actual production measurement ID)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Rate Limiting (Requests per 15-minute window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# SSL/Security Headers
FORCE_HTTPS=true
SECURE_COOKIES=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Development Only (Remove in production)
# DEBUG_MODE=false
# MOCK_EMAIL=false